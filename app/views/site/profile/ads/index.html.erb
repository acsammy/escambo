<h1>Listando An√∫ncios</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Image</th>
      <th>Title</th>
      <th>Category</th>
      <th>Price</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @ads.each do |ad| %>
      <tr>
        <td scope="row"><%= ad.id %></td>
        <td><%= image_tag ad.thumbnail(:thumb) %></td>
        <td><%= ad.title %></td>
        <td><%= ad.category.description %></td>
        <td><%= humanized_money_with_symbol ad.price %></td>
        <td>
          <%= link_to edit_site_profile_ad_path(ad), class: "btn btn-primary bt-sm" do %>
            <%= fa_icon "edit" %>
          <% end %>
          </button>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
