<!DOCTYPE html>
<html>
<head>
  <title>Escambo</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= stylesheet_link_tag    'backoffice', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag 'backoffice' %>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="Samuel Carvalho">
</head>

<body>
  <div id="wrapper">
    <%= render 'layouts/backoffice_shared/header' %>
    <%= render 'layouts/backoffice_shared/sidebar' %>
    <!-- Page Content -->
    <div id="page-wrapper">
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-12">


            <%= yield %>


          </div>
          <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </div>
    <!-- /#page-wrapper -->
  </div>
  <!-- /#wrapper -->

  <% if notice %>
    <script>
      $.notify("<%=notice%>", "success")
    </script>
  <% end %>
  <% if alert %>
    <script>
      $.notify("<%=alert%>", "error")
    </script
  <% end %>

</body>
</html>
