<h1 class="page-header">Administradores</h1>

<% if @admin.errors.any? %>
<div class="alert alert-danger alert-dismissable">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
  <ul>
    <% @admin.errors.full_messages.each do |message|%>
    <li>
      <%= message %>
    </li>
    <% end%>
  </ul>
</div>
<% end %>

<div class="panel panel-default">
  <div class="panel-heading">
    <%= action %>
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="col-lg-6">
      <%= form_for ([:backoffice, @admin]) do |f| %>
        <div class="form-group">
          <%= f.label :name%>
          <%= f.text_field :name, class: "form-control", placeholder:"Seu nome" %>
        </div>
        <div class="form-group">
          <%= f.label :email%>
          <%= f.email_field :email, class: "form-control", placeholder:"Email do Administrador" %>
        </div>

        <% if policy(@admin).edit? %>
          <div class="form-group">
            <%= f.label :role%>
            <%= f.collection_radio_buttons(:role, options_for_roles, :id, :description) do |b| %>
              <div class="radio">
                  <%= b.label { b.radio_button + b.text} %>
              </div>
            <% end %>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :password%>
          <%= f.password_field :password, class: "form-control", placeholder:"Digite a senha" %>
        </div>
        <div class="form-group">
          <%= f.label :password%>
          <%= f.password_field :password, class: "form-control", placeholder:"Confirme a senha" %>
        </div>
        <%= f.submit :cancel, class: "btn btn-danger" %>
        <%= f.submit :submit, class: "btn btn-default" %>
      <% end %>
    </div>
  </div>
  <!-- /.panel-body -->
</div>
